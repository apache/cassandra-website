    var filterCards = function(searchString){
        cards.each(function(){
            var el = $(this);
            var title = el.find('.discrete').text();
            title = title.toLowerCase();
            if(!title.includes(searchString)){
                el.addClass('hidden');
            }
        });
    }
});
</script>
</html>
